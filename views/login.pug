doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Login
        link(rel="stylesheet", href="/static/styles/style.css")
        link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css')

    body
            .login-container
                .key
                    i.fa.fa-key(aria-hidden='true')
                h1 Admin Panel
                
                if errorUsernameEmpty
                    p.error Username cannot be empty
                if errorPasswordEmpty
                    p.error Password cannot be empty
                if errorUsernameInvalid
                    p.error Incorrect username
                if errorUsernameInvalid
                    p.error Incorrect password

                form(action="/employees/login" method="POST") 
                    div 
                        label.label Username 
                        input(type="text" name="username")
                    div
                        label.label Password
                        input(type="password" name="password")
                    button.btn.btn_login LOG IN 